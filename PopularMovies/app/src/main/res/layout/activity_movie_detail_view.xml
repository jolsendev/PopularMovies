<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jamie.popularmovies.MovieDetailView"
    android:id="@+id/movie_container">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/title_layout"

        android:background="#20abd1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:textSize="25dp"
            android:id="@+id/movie_title"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/detail_movie_image"
        android:layout_toRightOf="@+id/detail_movie_image"
        android:layout_toEndOf="@+id/detail_movie_image"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="22dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_rating" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_release_date" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate Movie"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
    android:id="@+id/detail_movie_image"
    android:layout_width="125dp"
    android:layout_height="145dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_overview"
        android:layout_below="@+id/detail_movie_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp" />

</RelativeLayout>