<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jamie.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReviewActivity"
            android:label="@string/movie_review"
            android:parentActivityName=".DetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jamie.popularmovies.DetailActivity"
                />
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/movie_detail"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation|screenSize"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jamie.popularmovies.MainActivity" />
        </activity>
        <activity
            android:name=".MovieSettings"
            android:label="@string/title_activity_movie_settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jamie.popularmovies.MainActivity" />
        </activity>

        <provider
            android:name=".data.MovieProvider"
            android:authorities="com.example.jamie.popularmovies"
            android:exported="false"
            android:syncable="true" />

        <activity android:name=".YouTubeActivity">

        </activity>
        <!--<service android:name="com.example.jamie.popularmovies.service.MovieService"/>-->
    </application>

</manifest>